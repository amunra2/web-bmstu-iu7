@model ServerING.ViewModels.InfoServerViewModel

@{
    ViewData["Title"] = "Update Server";
}


<h3>Update Server</h3>

<form asp-action="UpdateServer" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="font-weight-bold" asp-for="Name"></label>

        <div class="col-md-5">
            <input asp-for="Name" class="form-cotrol" /> 
            <span asp-validation-for="Name" class="text-danger"></span> 
        </div>
    </div>

    <div class="form-group">
        <label class="font-weight-bold" asp-for="Ip"></label>

        <div class="col-md-5">
            <input asp-for="Ip" class="form-cotrol" />
            <span asp-validation-for="Ip" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="font-weight-bold" asp-for="GameName"></label>

        <div class="col-md-5">
                <input asp-for="GameName" class="form-cotrol" />
            <span asp-validation-for="GameName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="font-weight-bold" asp-for="CountryId"></label>

        <div class="col-md-5">
            <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control-sm"></select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="font-weight-bold" asp-for="PlatformId"></label>

        <div class="col-md-5">
            @*<input asp-for="PlatformId" class="form-cotrol" /> *@
            <select asp-for="PlatformId" asp-items="ViewBag.Platforms" class="form-control-sm"></select>
            <span asp-validation-for="PlatformId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="font-weight-bold" asp-for="WebHostingId"></label>

        <div class="col-md-5">
            <select asp-for="WebHostingId" asp-items="ViewBag.WebHostings" class="form-control-sm"></select>
            <span asp-validation-for="WebHostingId" class="text-danger"></span>
        </div>
    </div>

    <input class="btn btn-success" type="submit" value="Submit" />
</form>



